<?xml version="1.0" encoding="utf-8"?>
<!--
Autor: Gabriel Frank Krisna Zela Flores
Descripcion: Layout del fragmento de resultados. Muestra puntaje final, récord y botones para continuar,
con mejoras visuales de legibilidad y animación.
Fecha creación: 17/10/2025
Última modificación: 17/10/2025
-->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResultFragment">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_colores" />

    <!-- Capa oscura semitransparente para legibilidad -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000" /> <!-- 53% de transparencia -->

    <!-- Contenido del resultado -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados del juego"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="#FF000000"
            android:shadowRadius="5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" />

        <!-- Puntaje final (aparecerá con animación suave) -->
        <TextView
            android:id="@+id/txtFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu puntaje final es: 0"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="#FF000000"
            android:shadowRadius="5"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Récord máximo -->
        <TextView
            android:id="@+id/txtHighScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Récord actual: 0"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:shadowColor="#FF000000"
            android:shadowRadius="5"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtFinalScore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón para volver a jugar -->
        <Button
            android:id="@+id/btnPlayAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugar de nuevo"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:elevation="6dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/txtHighScore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón para volver al inicio -->
        <Button
            android:id="@+id/btnGoHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al inicio"
            android:textSize="16sp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnPlayAgain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
