Descripcion: Pantalla del juego con color a adivinar, botones de colores, temporizador y puntaje.
Fecha creación: 17/10/2025
Última modificación: 17/10/2025
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_colores"
    android:padding="16dp">

    <!-- Capa oscura para contraste -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000" />

    <!-- Texto de puntaje y tiempo -->
    <LinearLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Puntaje: 0"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="start" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tiempo: 30s"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="end" />
    </LinearLayout>

    <!-- Cuadro de color -->
    <View
        android:id="@+id/view_color_box"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botones de colores -->
    <GridLayout
        android:id="@+id/grid_colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/view_color_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_red"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#F44336"
            android:text="Rojo"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_blue"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#2196F3"
            android:text="Azul"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_green"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#4CAF50"
            android:text="Verde"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_yellow"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="#FFEB3B"
            android:text="Amarillo"
            android:textColor="@android:color/black"
            android:textAllCaps="false" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
